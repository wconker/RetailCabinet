<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="720dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corner"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp">

        <TextView
            android:id="@id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_48"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@id/dialog_hint"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/red_f6"
            android:textSize="20sp" />

    </RelativeLayout>

    <com.sovell.retail_cabinet.widget.PwdEditText
        android:id="@id/dialog_input"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@null"
        android:hint="请输入"
        android:textColor="@color/black_48"
        android:textColorHint="@color/gray_c7"
        android:textSize="26sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@color/red_f6" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="32dp"
        android:background="@color/gray_d9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp">

        <Button
            android:id="@id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_white_corner"
            android:text="取消"
            android:textColor="@color/black_48"
            android:textSize="30sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_d9" />

        <Button
            android:id="@id/dialog_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_white_corner"
            android:text="确定"
            android:textColor="@color/red_f6"
            android:textSize="30sp" />

    </LinearLayout>

</LinearLayout>