<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="8dp">

    <ImageView
        android:id="@id/item_goods_iv"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_add" />

    <TextView
        android:id="@id/item_goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textColor="@color/black_48"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@id/item_goods_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_a2"
        android:textSize="20sp"
        android:visibility="gone" />

    <Button
        android:id="@id/item_goods_test"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:background="@drawable/press_gray_border"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="出货测试"
        android:textColor="@color/black_48"
        android:textSize="20sp"
        android:visibility="gone" />

</LinearLayout>