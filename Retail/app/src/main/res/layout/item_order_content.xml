<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:visibility="gone"
        android:id="@+id/cv_show_day"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#eeee"
        android:gravity="center_vertical"
        android:paddingLeft="11dp"
        tools:text="今天"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cv_order_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textColor="#ff484e63"
            android:textSize="28sp"
            tools:text="日期" />

        <TextView
            android:id="@+id/cv_order_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="#ff484e63"
            android:textSize="28sp"
            tools:text="商品名称" />

        <TextView
            android:id="@+id/cv_order_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ff484e63"
            android:textSize="28sp"
            tools:text="数量" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/cv_order_opt"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:background="@drawable/press_red"
                android:gravity="center"
                android:text="撤单"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/cv_order_opt_revoke"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/gray_7e"
                android:textSize="28sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>