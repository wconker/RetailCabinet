<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <ImageView
        android:id="@+id/cv_confirm_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_def_big" />

    <TextView
        android:id="@+id/cv_confirm_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toRightOf="@+id/cv_confirm_img"
        android:gravity="center_vertical"
        android:textColor="@color/black_48"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:text="油麦菜" />

    <TextView
        android:id="@+id/cv_confirm_count"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="33dp"
        android:layout_toLeftOf="@+id/cv_confirm_price"
        android:gravity="center_vertical"
        android:textColor="@color/black_48"
        android:textSize="28sp"
        tools:text="x3" />

    <TextView
        android:id="@+id/cv_confirm_price"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical|right"
        android:textColor="@color/black_48"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:text="￥12" />


</RelativeLayout>