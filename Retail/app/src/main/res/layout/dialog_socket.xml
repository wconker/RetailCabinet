<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="730dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corner"
    android:orientation="vertical"
    android:padding="40dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp">

        <TextView
            android:id="@id/goods_row"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="层号"
            android:textColor="@color/black_48"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@id/goods_column"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/goods_row"
            android:gravity="center"
            android:textColor="@color/gray_a2"
            android:textSize="24sp" />

        <ImageView
            android:id="@id/goods_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="7dp"
            android:src="@drawable/ic_close" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@id/goods_iv"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@id/goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称"
                android:textColor="@color/black_48"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@id/goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:text="价格 "
                android:textColor="@color/gray_a2"
                android:textSize="24sp" />

            <TextView
                android:id="@id/goods_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="剩余 "
                android:textColor="@color/gray_a2"
                android:textSize="24sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@id/goods_change"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginEnd="24dp"
            android:layout_weight="1"
            android:background="@drawable/press_gray_border"
            android:text="更换商品"
            android:textColor="@color/gray_7e"
            android:textSize="26sp" />

        <Button
            android:id="@id/goods_delete"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginEnd="24dp"
            android:layout_weight="1"
            android:background="@drawable/press_gray_border"
            android:text="下架商品"
            android:textColor="@color/gray_7e"
            android:textSize="26sp" />

        <Button
            android:id="@id/goods_clear"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="@drawable/press_gray_border"
            android:text="清空货道"
            android:textColor="@color/gray_7e"
            android:textSize="26sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="补货数量"
        android:textColor="@color/black_48"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/border_gray_white">

        <TextView
            android:id="@id/goods_sub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|end"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:text="—"
            android:textColor="@color/gray_a2"
            android:textSize="44sp" />

        <TextView
            android:id="@id/goods_num"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black_48"
            android:textSize="26sp" />

        <TextView
            android:id="@id/goods_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|start"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:text="+"
            android:textColor="@color/gray_a2"
            android:textSize="44sp" />

    </LinearLayout>

    <Button
        android:id="@id/goods_save"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/press_red"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

</LinearLayout>