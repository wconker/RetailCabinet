<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/DialogAnim</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="BottomDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/DateDialogAnim</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DateDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/date_enter</item>
        <item name="android:windowExitAnimation">@anim/date_exit</item>
    </style>

    <style name="DialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/load_in</item>
        <item name="android:windowExitAnimation">@anim/load_out</item>
    </style>

</resources>
